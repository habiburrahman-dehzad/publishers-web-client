
@{
    ViewBag.Title = "Confirmation Email Sent";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-text">
                    <span class="title">Congratulations</span>
                    <hr class="star-light">
                    <span class="description">Your Account Successfully Created</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="col-lg-12">
            <h2>@ViewBag.Title</h2>
            <p class="lead">A confirmation email was sent to your email address.</p>
            <p class="lead">@ViewBag.Message</p>
        </div>
    </div>
</section>
