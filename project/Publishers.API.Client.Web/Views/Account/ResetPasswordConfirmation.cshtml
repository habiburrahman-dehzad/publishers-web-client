@{
    ViewBag.Title = "Reset password confirmation";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-text">
                    <span class="title">Password Reset Confirmed</span>
                    <hr class="star-light">
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="col-lg-12">
            <div>
                <p>
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>
        </div>
    </div>
</section>
