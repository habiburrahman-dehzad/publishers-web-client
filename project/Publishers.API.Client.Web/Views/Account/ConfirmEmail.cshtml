@{
    ViewBag.Title = "Confirm Email";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-text">
                    <span class="title">Email Confirmed</span>
                    <hr class="star-light">
                    <span class="description">You successfully confirmed your email</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="col-lg-12">
            <p>
                Thank you for confirming your email. Please 
                @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
</section>
