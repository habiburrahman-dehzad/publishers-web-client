@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-text">
                    <span class="title">Confirmation Needed</span>
                    <hr class="star-light">
                    <span class="description">An email was sent to your email address</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="col-lg-12">
            <div>
                <p>
                    Please check your email to reset your password.
                </p>
            </div>
        </div>
    </div>
</section>