@model Publishers.API.Client.MembershipService.Identity.ApplicationUser
@{
    ViewBag.Title = "Details";
}
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <i class="fa fa-book fa-4x"></i>
                <div class="title-text">
                    <span class="title">Details of The User</span>
                    <hr class="star-light">
                    <span class="description">See the List of User Roles</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div>
            <h4>User</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>
            </dl>
        </div>
        <h4>List of roles for this user</h4>
        @if (ViewBag.RoleNames.Count == 0)
        {
            <hr />
            <p>No roles found for this user.</p>
        }
        <table class="table">
            @foreach (var item in ViewBag.RoleNames)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</section>
