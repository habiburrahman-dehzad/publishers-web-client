@model Publishers.API.Client.Core.ViewModels.DemandsViewModel

@{
    ViewBag.Title = "UsersDemands";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <i class="fa fa-book fa-4x"></i>
                <div class="title-text">
                    <span class="title">Your Demands</span>
                    <hr class="star-light">
                    <span class="description">Here is the List of All Books for Which you have Placed a Demand</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        @if(Model == null || Model.Books == null || Model.Books.Count == 0)
        {
            <p>@ViewBag.Message</p>
        }
        else {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Books)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item._id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item._id })
                    </td>
                </tr>
            }

        </table>
        }
    </div>
</section>