@model AspNet.Identity.MongoDB.IdentityRole
@{
    ViewBag.Title = "Delete";
}
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <i class="fa fa-trash fa-4x"></i>
                <div class="title-text">
                    <span class="title">Delete Role</span>
                    <hr class="star-light">
                    <span class="description">Are you sure you want to delete this Role?</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
        <div>
            <h4>Role.</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</section>