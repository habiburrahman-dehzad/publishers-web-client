@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <i class="fa fa-exclamation-triangle fa-5x"></i>
                <div class="title-text">
                    <span class="title">Error</span>
                    <hr class="star-light">
                    <span class="description">An error occurred while processing your request</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container-fluid">
        <div class="text-center">
            <p class="lead text-danger">@ViewBag.ErrorMessage</p>
        </div>
    </div>
</section>

